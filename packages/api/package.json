{
    "name": "@repo/api",
    "version": "0.0.0",
    "private": true,
    "description": "A tRPC API package used in the web application",
    "license": "MIT",
    "sideEffects": false,
    "type": "module",
    "exports": {
        ".": {
            "types": "./src/index.ts",
            "default": "./src/index.ts"
        }
    },
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "clean": "bun run rm -rf dist *.tsbuildinfo",
        "dev": "tsc -w -p tsconfig.build.json",
        "lint": "eslint .  --max-warnings 0",
        "typecheck": "tsc"
    },
    "dependencies": {
        "@neondatabase/serverless": "^0.10.4",
        "@oslojs/crypto": "^1.0.1",
        "@oslojs/encoding": "^1.1.0",
        "@oslojs/otp": "^1.1.0",
        "@repo/auth": "workspace:^",
        "@repo/core": "workspace:^",
        "@repo/db": "workspace:*",
        "@trpc/server": "10.45.2",
        "@upstash/ratelimit": "^2.0.5",
        "@upstash/redis": "^1.34.3",
        "drizzle-orm": "^0.38.3",
        "jsonwebtoken": "^9.0.2",
        "resend": "^4.1.1",
        "superjson": "^2.2.1",
        "uqr": "^0.1.2",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@repo/eslint": "workspace:*",
        "@types/jsonwebtoken": "^9.0.8",
        "@types/node": "^22.10.3",
        "typescript": "^5.0.0"
    }
}